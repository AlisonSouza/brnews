%html{:lang => "en", "ng-app"=>"home"}
  %head

    %title brNEWS - As principais notícias do Brasil em tempo real.

    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport", "initial-scale"=>1, "maximum-scale"=>1, "minimum-scale"=>1, "user-scalable"=>"no"}
    %meta{content: "Veja notícias de política, economia, esporte, negócios e tecnologia das melhores fontes do país.", name: "description"}
    %meta{content: "", name: "keywords"}
    %meta{content: "http://feed.brnews.co", property: "og:url"}
    %meta{content: "As principais notícias do Brasil em tempo real.", property: "og:title"}
    %meta{content: "", property: "og:site_name"}
    %meta{content: "Veja notícias de política, economia, esporte, negócios e tecnologia das melhores fontes do país.", property: "og:description"}
    %meta{content: "website", property: "og:type"}

    :plain
