  %body
    .box
      .row-fluid.row-offcanvas.row-offcanvas-left
        .col-xs-12.col-sm-7.col-lg-5.col-md-5{style:'float: none; margin: 0 auto;'}
          .list-group
            -@result[:stories].each do |item|
              -topicn = _topicn(item)
              %a.list-group-item{href:"#{item['fb_link']}", style:"color:#fff;background-color:#{_bgcolortpc(item)}"}
                %small <span class="topic">#{topicn}</span> - <span class="source">#{item['fb_from_name']}</span><!--span> - </span><span class="ago"> </span-->
                %h5.list-group-item-heading{style:'margin-top:10px;color:#fff'} #{item['title']}


      .row-fluid
        .col-xs-12.col-sm-7.col-lg-5.col-md-5{style:'float: none; margin: 0 auto; text-align: center;'}
          %a.btn{style:'background-color:#4C8EFA;color:#fff', href:"?page=#{@result[:next]}"} Próxima página


